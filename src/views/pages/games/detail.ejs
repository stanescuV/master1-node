<%- include('../../partials/head', { title: game.name }) %>

<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../../partials/header') %>

  <main class="container mx-auto py-8 px-4 grow">
    <a href="/games" class="inline-flex items-center gap-1 text-blue-500 hover:text-blue-700 mb-6">
      <%- icon('ArrowLeft', { size: 18 }) %>
      Retour a la liste
    </a>

    <div class="bg-white rounded-lg shadow-lg p-8 max-w-2xl">
      <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= game.name %></h1>

      <span class="inline-block bg-purple-100 text-purple-800 px-4 py-2 rounded-full mb-6">
        <%= game.genre %>
      </span>

      <div class="space-y-4">
        <div class="flex justify-between border-b pb-2">
          <span class="text-gray-600 font-medium">Joueurs</span>
          <span class="text-gray-800"><%= game.minPlayers %> - <%= game.maxPlayers %></span>
        </div>

        <% if (game.releaseYear) { %>
          <div class="flex justify-between border-b pb-2">
            <span class="text-gray-600 font-medium">Annee de sortie</span>
            <span class="text-gray-800"><%= game.releaseYear %></span>
          </div>
        <% } %>

        <% if (game.description) { %>
          <div class="pt-4">
            <h3 class="text-gray-600 font-medium mb-2">Description</h3>
            <p class="text-gray-800"><%= game.description %></p>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>
</body>
</html>
