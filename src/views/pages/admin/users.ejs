<%- include('../../partials/head', { title: 'Gestion des utilisateurs' }) %>

<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../../partials/header') %>

  <main class="container mx-auto py-8 px-4 grow">
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-800">Gestion des utilisateurs</h1>
        <p class="text-gray-500 mt-1">Gerez les comptes utilisateurs de la plateforme</p>
      </div>
      <div class="flex items-center gap-3">
        <span class="bg-blue-100 text-blue-800 px-4 py-2 rounded-lg font-medium flex items-center gap-2">
          <%- icon('Users', { size: 20 }) %>
          <%= users.length %> utilisateur<%= users.length > 1 ? 's' : '' %>
        </span>
      </div>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6 flex items-center gap-2">
        <%- icon('AlertCircle', { size: 20 }) %>
        <%= error %>
      </div>
    <% } %>

    <% if (typeof success !== 'undefined' && success) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6 flex items-center gap-2">
        <%- icon('CheckCircle', { size: 20 }) %>
        <%= success %>
      </div>
    <% } %>

    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gray-800 text-white px-6 py-4">
        <h2 class="font-semibold flex items-center gap-2">
          <%- icon('List', { size: 20 }) %>
          Liste des utilisateurs
        </h2>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/4">Utilisateur</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/4">Email</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/6">Role</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/6">Inscription</th>
              <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/6">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% users.forEach(u => { %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <% if (u.role === 'admin') { %>
                      <div class="w-10 h-10 rounded-full flex items-center justify-center flex-shrink-0 bg-purple-100">
                        <%- icon('Shield', { size: 20, class: 'text-purple-600' }) %>
                      </div>
                    <% } else { %>
                      <div class="w-10 h-10 rounded-full flex items-center justify-center flex-shrink-0 bg-blue-100">
                        <%- icon('User', { size: 20, class: 'text-blue-600' }) %>
                      </div>
                    <% } %>
                    <div>
                      <p class="text-sm font-semibold text-gray-900"><%= u.username %></p>
                      <p class="text-xs text-gray-400">ID: <%= u.id %></p>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <span class="text-sm text-gray-600"><%= u.email %></span>
                </td>
                <td class="px-6 py-4">
                  <span class="px-3 py-1 text-xs font-semibold rounded-full <%= u.role === 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-gray-100 text-gray-700' %>">
                    <%= u.role === 'admin' ? 'Administrateur' : 'Utilisateur' %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <span class="text-sm text-gray-500">
                    <%= new Date(u.createdAt).toLocaleDateString('fr-FR', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                  </span>
                </td>
                <td class="px-6 py-4 text-center">
                  <% if (u.id !== user.id) { %>
                    <button
                      type="button"
                      onclick="openDeleteModal(<%= u.id %>, '<%= u.username %>', '/admin/users')"
                      class="inline-flex items-center gap-1 px-3 py-1.5 text-sm text-red-600 hover:text-white hover:bg-red-500 rounded-lg transition-colors cursor-pointer"
                      title="Supprimer cet utilisateur"
                    >
                      <%- icon('Trash2', { size: 16 }) %>
                      Supprimer
                    </button>
                  <% } else { %>
                    <span class="inline-flex items-center gap-1 px-3 py-1.5 text-sm text-gray-300 cursor-not-allowed" title="Vous ne pouvez pas vous supprimer">
                      <%- icon('Trash2', { size: 16 }) %>
                      Supprimer
                    </span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <%- include('../../partials/deleteModal', { itemType: "l'utilisateur" }) %>

  <%- include('../../partials/footer') %>
</body>
</html>
