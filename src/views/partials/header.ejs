<header class="bg-gray-800 text-white">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-xl font-bold hover:text-blue-400 flex items-center gap-2">
        <%- icon('Monitor', { size: 24 }) %>
        LAN Party Manager
      </a>
      <ul class="flex gap-6 items-center">
        <li>
          <a href="/" class="hover:text-blue-400 flex items-center gap-1">
            <%- icon('Home', { size: 18 }) %>
            Accueil
          </a>
        </li>
        <li>
          <a href="/games" class="hover:text-blue-400 flex items-center gap-1">
            <%- icon('Gamepad2', { size: 18 }) %>
            Games
          </a>
        </li>
        <li>
          <a href="/stations" class="hover:text-blue-400 flex items-center gap-1">
            <%- icon('Server', { size: 18 }) %>
            Stations
          </a>
        </li>
        <li>
          <a href="/bookings" class="hover:text-blue-400 flex items-center gap-1">
            <%- icon('Calendar', { size: 18 }) %>
            Reservations
          </a>
        </li>
        <li>
          <a href="/api-docs" class="hover:text-blue-400 text-gray-400 flex items-center gap-1">
            <%- icon('FileText', { size: 18 }) %>
            API
          </a>
        </li>
        <% if (user && user.role === 'admin') { %>
          <li>
            <a href="/admin/users" class="hover:text-blue-400 flex items-center gap-1">
              <%- icon('Users', { size: 18 }) %>
              Utilisateurs
            </a>
          </li>
        <% } %>
        <li class="border-l border-gray-600 pl-6 ml-2">
          <% if (user) { %>
            <div class="flex items-center gap-4">
              <span class="text-gray-400 flex items-center gap-1">
                <%- icon('User', { size: 18 }) %>
                <%= user.username %>
              </span>
              <a href="/auth/logout" class="bg-red-500 hover:bg-red-600 px-3 py-1 rounded text-sm flex items-center gap-1">
                <%- icon('LogOut', { size: 16 }) %>
                Deconnexion
              </a>
            </div>
          <% } else { %>
            <a href="/auth/login" class="bg-blue-500 hover:bg-blue-600 px-3 py-1 rounded text-sm flex items-center gap-1">
              <%- icon('LogIn', { size: 16 }) %>
              Connexion
            </a>
          <% } %>
        </li>
      </ul>
    </div>
  </nav>
</header>
